<div class="content">
	<h1>DramaRecensions</h1>
	{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
		<li>{{this}}</li>
		{{/each}}
	</ul>
	{{else}}
	{{#if dramaRecensions.length}}
	{{#each dramaRecensions}}
	<div class=".cont" id="recensions">
		<h3>{{dramaName}} {{dramaDescription}}</h3>
		<p> {{DramaRecensionDescription}}</p>
	</div>
	{{/each}}
	{{else}}
	<p>No drama recensions exist yet.</p>
	{{/if}}
	{{/if}}
</div>
<p><a href="/dramaRecensions/{{dramaRecensions.id}}">Show drama-recension</a></p>
	
