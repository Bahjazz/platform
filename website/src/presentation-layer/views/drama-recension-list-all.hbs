<div class="content">
	<h1>All drama recensions</h1>
	{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
		<li>{{this}}</li>
		{{/each}}
	</ul>
	{{else}}

	{{#if dramaRecensions.length}}
	<ul>
		{{#each dramaRecensions}}
		<li><a href="/drama-recensions/{{id}}">{{name}}</a></li>
		{{/each}}
	</ul>
	{{else}}
	<p>No drama recensions exist yet.</p>
	{{/if}}

	{{/if}}
</div>