<div class="content">
	<h1>All drama </h1>
	{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
		<li>{{this}}</li>
		{{/each}}
	</ul>
	{{else}}

	{{#if dramas.length}}	
	  {{#each dramas}}
	   <div class="cont">
	<p>posted By: {{dramaName}}</p>
     <li> {{dramaID}}. {{dramaName}} </li> 	 
	 <li>{{dramaDescription}}</li>	
     <a href="/Dramas/{{DramaID}}"><button> click for more </button></a>
				
	 </div>
	{{/each}}
 {{else}}
	<p>No drama exist yet.</p>
	{{/if}}
{{/if}}
</div>