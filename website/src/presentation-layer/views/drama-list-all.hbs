<div class="content">
	<h1>All drama </h1>
	{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
		<li>{{this}}</li>
		{{/each}}
	</ul>
	{{else}}

	{{#if dramas.length}}
	<ul>
		{{#each dramas}}
		<li><a href="/dramas/{{id}}">{{name}}</a></li>
		{{/each}}
	</ul>
	{{else}}
	<p>No drama exist yet.</p>
	{{/if}}

	{{/if}}
</div>