<div class="content">
	  <h2>Create free post as you wish about a drama. </h2>
</div>

{{#if errors.length}}
<p>Fix the errors for drama recension</p>
<ul>
	{{#each errors}}
		<li>{{this}}</li>
	{{/each}}
</ul>
{{/if}}
<form action="" method="POST">
	
	<div>
		Name: <input type="text" name="name" value="{{name}}">
	</div>
	
	<div>
		Description: <input type="text" name="description" value="{{description}}">
	</div>
     <input type="submit" name="" value="Create">
</form>
